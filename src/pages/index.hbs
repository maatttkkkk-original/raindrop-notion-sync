<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Raindrop/Notion Sync</title>
  
  <link rel="stylesheet" href="/public/styles/design-system.css">
  <link rel="stylesheet" href="/public/styles/components.css">
  <link rel="stylesheet" href="/public/styles/dashboard.css">
</head>
<body>
  <main class="dashboard-8-section" id="main-content" role="main">
    <!-- Section 1: Title -->
    <div class="dashboard-section section-1 bg-white">
      <div class="section-content">
        <h1 class="text-huge">Raindrop/Notion Sync</h1>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 2: Raindrop Count -->
    <div class="dashboard-section section-2 bg-white" id="raindrop-section">
      <div class="section-content">
        <div class="count-display" id="raindrop-display">
          <span class="text-huge" id="raindrop">... Raindrop Bookmarks</span>
        </div>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 3: Notion Count -->
    <div class="dashboard-section section-3 bg-white" id="notion-section">
      <div class="section-content">
        <div class="count-display" id="notion-display">
          <span class="text-huge" id="notion">... Notion Pages</span>
        </div>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 4: Status Message -->
    <div class="dashboard-section section-4 bg-white" id="status-section">
      <div class="section-content">
        <div 
          id="status" 
          class="text-huge status-text" 
          role="status" 
          aria-live="polite"
        >
          Loading...
        </div>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 5: Primary Action -->
    <div class="dashboard-section section-5 bg-white" id="primary-action-section">
      <div class="section-content">
        <a 
          href="/sync?password={{password}}&mode=smart" 
          class="section-action-button text-huge text-black"
          id="smart-sync-button"
        >
          Smart Sync â†»
        </a>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 6: Secondary Action -->
    <div class="dashboard-section section-6 bg-white" id="secondary-action-section">
      <div class="section-content">
        <a 
          href="/sync?password={{password}}&mode=incremental&daysBack=7" 
          class="section-action-button text-huge text-black"
          id="incremental-sync-button"
        >
          Recent Only (7 days)
        </a>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 7: Tertiary Action -->
    <div class="dashboard-section section-7 bg-white" id="tertiary-action-section">
      <div class="section-content">
        <a 
          href="/sync?password={{password}}&mode=reset&deleteOrphaned=true" 
          class="section-action-button text-huge text-black"
          id="reset-sync-button"
        >
          Reset & Full Sync
        </a>
      </div>
    </div>
    
    <div class="dashboard-divider"></div>
    
    <!-- Section 8: Back/Navigation -->
    <div class="dashboard-section section-8 bg-light-gray back-section">
      <div class="section-content">
        <div class="text-large" style="color: #999;">Dashboard</div>
      </div>
    </div>
    
    <!-- Error Message (Hidden by default) -->
    <div id="error-message" class="error-message d-none" role="alert" style="position: fixed; top: 20px; left: 20px; z-index: 1000;">
      <p>Failed to load sync status.</p>
      <button id="retry-button" class="retry-button" type="button">
        Retry
      </button>
    </div>
    
    <!-- Status Indicator (Hidden - replaced by section-based status) -->
    <div 
      id="indicator" 
      class="status-indicator not-synced d-none" 
      role="img" 
      aria-label="Sync status indicator"
    ></div>
  </main>
  
  <script src="/public/scripts/utils.js"></script>
  <script src="/public/scripts/sync.js"></script>
  <script src="/public/scripts/enhancements.js"></script>
</body>
</html>